{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    "config:base",
    ":assignAndReview(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":prHourlyLimitNone",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 6am and before 8am on monday"]
  },
  "major": {
    "automerge": false
  },
   "packageRules": [
    {
      "matchPackageNames": ["@types/jest"],
      "groupName": "jest monorepo"
    }
  ],
  "schedule": ["after 2am and before 6am"]
}
