{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":prHourlyLimitNone",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 6am and before 8am on monday"]
  },
  "major": {
    "automerge": false
  },
  "schedule": ["after 2am and before 6am"]
}
