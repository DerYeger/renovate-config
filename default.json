{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    "config:base",
    ":assignAndReview(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":prHourlyLimitNone",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "jest monorepo",
      "matchPackageNames": ["@types/jest", "jest", "babel-jest", "ts-jest"],
      "allowedVersions": "<28"
    },
    {
      "groupName": "kotlin monorepo",
      "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin(:|\\.)"],
      "matchDatasources": ["maven"]
    },
    {
      "groupName": "ktor monorepo",
      "matchPackagePatterns": ["^io\\.ktor:"],
      "matchDatasources": ["maven"]
    }
  ],
  "schedule": ["after 12am and before 10am"],
  "timezone": "Europe/Vienna"
}
